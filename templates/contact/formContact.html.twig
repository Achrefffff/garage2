{% extends 'base.html.twig' %}

{% block title %}Contactez Nous{% endblock %}

{% block body %}
    <h1>Contactez-nous</h1>

    {{ form_start(form) }}
    
    {{ form_row(form.nom) }}
    {{ form_row(form.prenom) }}
    {{ form_row(form.email) }}
    {{ form_row(form.telephone) }}
    {{ form_row(form.message) }}

    <div class="form-group mx-auto">
        <label for="voiture_id">Clickez pour choisir une voiture :</label>
        <select id="voiture_id" name="voiture_id" class="form-control">
            {% for voiture in voitures %}
                <option value="{{ voiture.id }}">{{ voiture.nom }}</option>
            {% endfor %}
        </select>
    </div>

    <button type="submit" class="btn btn-dark text-white btn-md mt-2">Envoyer</button>

    {{ form_end(form) }}
    {% include "partials/_footer.html.twig" %}
{% endblock %}
